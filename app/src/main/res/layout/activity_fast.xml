<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".Fast">
	
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:gravity="center_horizontal"
			android:background="@drawable/bggame">
		
		
		<TextView
				android:text="Timer : 20"
				android:layout_width="136dp"
				android:layout_height="65dp"
				tools:layout_editor_absoluteY="486dp"
				tools:layout_editor_absoluteX="124dp"
				android:id="@+id/timerText"
				android:gravity="center"
				android:textSize="24sp"
				android:textAlignment="center"
				android:layout_marginTop="40dp"/>
		<GridLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="40dp">
			
			<ImageView
					android:id="@+id/imageView"
					android:layout_width="90dp"
					android:layout_height="90dp"
					android:layout_column="0"
					android:layout_row="0"
					app:srcCompat="@drawable/gambar12"
					android:onClick="increaseScore"/>
			<ImageView
					android:id="@+id/imageView2"
					android:layout_width="90dp"
					android:layout_height="90dp"
					android:layout_column="1"
					android:layout_row="0"
					app:srcCompat="@drawable/gambar11"
					android:onClick="increaseScore"/>
			<ImageView
					android:id="@+id/imageView3"
					android:layout_width="90dp"
					android:layout_height="90dp"
					android:layout_column="2"
					android:layout_row="0"
					app:srcCompat="@drawable/gambar3"
					android:onClick="increaseScore"/>
			<ImageView
					android:id="@+id/imageView4"
					android:layout_width="90dp"
					android:layout_height="90dp"
					android:layout_column="0"
					android:layout_row="1"
					app:srcCompat="@drawable/gambar4"
					android:onClick="increaseScore"/>
			<ImageView
					android:id="@+id/imageView5"
					android:layout_width="90dp"
					android:layout_height="90dp"
					android:layout_column="1"
					android:layout_row="1"
					app:srcCompat="@drawable/gambar10"
					android:onClick="increaseScore"/>
			<ImageView
					android:id="@+id/imageView6"
					android:layout_width="90dp"
					android:layout_height="90dp"
					android:layout_column="2"
					android:layout_row="1"
					app:srcCompat="@drawable/gambar6"
					android:onClick="increaseScore"/>
			<ImageView
					android:id="@+id/imageView7"
					android:layout_width="90dp"
					android:layout_height="90dp"
					android:layout_column="0"
					android:layout_row="2"
					app:srcCompat="@drawable/gambar14"
					android:onClick="increaseScore"/>
			<ImageView
					android:id="@+id/imageView8"
					android:layout_width="90dp"
					android:layout_height="90dp"
					android:layout_column="1"
					android:layout_row="2"
					app:srcCompat="@drawable/gambar8"
					android:onClick="increaseScore"/>
			<ImageView
					android:id="@+id/imageView9"
					android:layout_width="90dp"
					android:layout_height="90dp"
					android:layout_column="2"
					android:layout_row="2"
					app:srcCompat="@drawable/gambar13"
					android:onClick="increaseScore"/>
		</GridLayout>
		<TextView
				android:text="Score : 0"
				android:layout_width="136dp"
				android:layout_height="65dp"
				tools:layout_editor_absoluteY="26dp"
				tools:layout_editor_absoluteX="124dp"
				android:id="@+id/scoreText"
				android:gravity="center"
				android:textSize="24sp"
				android:textAlignment="center"
				android:layout_marginTop="30dp"/>
	
	</LinearLayout>

</RelativeLayout>